%h1= @book.title
.left_column
   %p
      = link_to image_tag(@book.photo.url(:medium)), @book.photo.url, :rel => "lightbox"
.right_column
   %p
      = @book.desc.bbcode_to_html({}, false).html_safe
      %br/
      %br/
      %i= @book.author
%div{:style => "clear: both;"}
   %p
      = link_to "Pokaż użytkowników, którzy posiadają tą książkę", {:action => "holders", :id => @book.id}, :remote => true, :"data-update" => "holders"
      |
      = link_to "Pokaż opinie użytkowników o tej książce", {:action => "opinions", :id => @book.id}, :remote => true, :"data-update" => "opinions"
   #holders
   #opinions
   %br/
   %br/
   = link_to "Dodaj pozycję do swoich książek", :action => "add", :id => @book.slug
   %br/
   - if user_signed_in? and current_user.admin?
      = link_to "Edytuj pozycję", edit_book_path
      = link_to "Usuń pozycję", {:acttion => "destroy", :id => @book.slug, :complete => true}, :confirm => "Jesteś pewien, że chcesz usunąć tą pozycje całkowicie z bazy danych?", :method => :delete
      %div{:style => "overflow: hidden;"}
         = form_for Opinion.new, :url => '/books/opinion_add' do |f|
            %p{:class => "form"}
               = f.hidden_field :book_id, :value => @book.id
            %p{:class => "form"}
               = f.label :title, "Tytuł opinii"
               = f.text_field :title
            %p{:class => "form"}
               = f.text_area :text, :rows => 10, :cols => 80
            %p{:class => "form"}
               = f.submit "Dodaj opinię"
   %br/
   = link_to "Powrót", :back
