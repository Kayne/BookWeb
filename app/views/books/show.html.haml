%h1= @book.title
%div{:class => "left_column"}
   %p
      = image_tag @book.photo.url(:medium)
%div{:class => "right_column"}
   %p
      = link_to "Edytuj pozycję", edit_book_path
      %br/
      = @book.desc
      %br/
      %i= @book.author
%div{:class => "holders"}
   - if @assigments.size > 0 then
      %p Książkę posiadają:
      %ul
         - @assigments.each do |a|
            %li= link_to a.user.username, :controller => "/profiles", :action => "show", :id => a.user.username
%br/
%br/
= link_to "Dodaj pozycję do swoich książek", :action => "add", :id => @book.slug
%br/
= link_to "Powrót", :back
