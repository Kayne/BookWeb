<h2>Ustawienia <%= current_user.username %></h2>

<%= image_tag current_user.avatar.url %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true }) do |f| %>
  <%= devise_error_messages! %>
  
  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password, "Nowe hasło" %> <i>(zostaw puste jeśli nie chcesz zmieniać)</i><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "Potwierdź hasło" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :current_password, "Aktualne hasło" %> <i>(musisz wpisać aktualne hasło aby potwierdzić zmiany)</i><br />
  <%= f.password_field :current_password %></div>
  
  <div><%= f.label :avatar, "Zdjęcie profilowe" %><br />
  <%=f.file_field :avatar, :value => current_user.avatar.url %></div>

  <div><%= f.submit "Aktualizuj" %></div>
<% end %>

<h3>Usuń konto</h3>

<p>Niezadowolony z serwisu? <%= link_to "Usuń moje konto", registration_path(resource_name), :confirm => "Jesteś pewien?", :method => :delete %>.</p>

<%= link_to "Wróć", :back %>
